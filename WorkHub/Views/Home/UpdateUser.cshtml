
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <!-- / Navbar -->
    <!-- Content Wrapper-->
    <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Dashboard Overview -->
            <div class="card" style="padding: 20px; border: 1px solid #ccc; border-radius: 8px;">
                <h2 style="text-align: center; font-family: 'Times New Roman', Times, serif;">Edit User</h2>
                <form action="/Home/EditUser" method="post" style="max-width: 600px; margin: auto;">
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="userid" style="display: block; margin-bottom: 5px; font-family: 'Times New Roman', Times, serif;">User Name:</label>
                        <input type="text" id="userid" name="userid" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="uerid" style="display: block; margin-bottom: 5px; font-family: 'Times New Roman', Times, serif;">Uer ID:</label>
                        <input type="text" id="uerid" name="uerid" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="email" style="display: block; margin-bottom: 5px; font-family: 'Times New Roman', Times, serif;">Email:</label>
                        <input type="email" id="email" name="email" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="password" style="display: block; margin-bottom: 5px; font-family: 'Times New Roman', Times, serif;">Password:</label>
                        <input type="password" id="password" name="password" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="role" style="display: block; margin-bottom: 5px; font-family: 'Times New Roman', Times, serif;">Role:</label>
                        <input type="text" id="role" name="role" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                    </div>
                    <div class="form-group" style="text-align: center;">
                        <button type="submit" class="btn btn-sm btn-secondary" style="padding: 10px 20px; border: none; background-color: #6c757d; color: #fff; border-radius: 4px; font-family: 'Times New Roman', Times, serif;">Update</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /Content -->
    </div>

</body>




