@{
    ViewBag.Title = "Application Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <!-- Content Wrapper-->
    <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Dashboard Overview -->
            <div class="row">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Application System Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- System Settings Section -->
                                <div class="col-lg-6 mb-4">
                                    <h6 class="card-title">System Settings</h6>
                                    <form>
                                        <div class="mb-3">
                                            <label for="appName" class="form-label">Application Name</label>
                                            <input type="text" class="form-control" id="appName" name="appName" placeholder="Enter application name">
                                        </div>
                                        <div class="mb-3">
                                            <label for="applicationdetails" class="form-label">Application Details</label>
                                            <textarea class="form-control" id="applicationdetails" name="applicationdetails" rows="3" placeholder="Enter application details"></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="defaultSettings" class="form-label">Default Settings</label>
                                            <input type="text" class="form-control" id="defaultSettings" name="defaultSettings" placeholder="Enter default settings">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save Settings</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Content -->
    </div>

</body>


