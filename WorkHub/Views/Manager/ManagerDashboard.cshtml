@{
    ViewBag.Title = "Manager Dashboard";
    Layout = "~/Views/Manager/ManagerIndex.cshtml";
}

<!-- Dashboard Overview -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    Dashboard Overview
                    @if (Session["UserRole"] != null)
                    {
                        <strong> Role:</strong> @Session["UserRole"].ToString()
                    }
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Active Projects</h6>
                                <p class="card-text">Summary of active projects.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Recent Task Activities</h6>
                                <p class="card-text">Recent task activities.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Pending Approvals</h6>
                                <p class="card-text">Pending approvals or actions.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 Projects 
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Projects</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 mb-4">
                        <h6 class="card-title">List of Current Projects</h6>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Project Name</th>
                                    <th>Status</th>
                                    <th>Deadline</th>
                                    <th>Team Members</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Project A</td>
                                    <td><span class="badge bg-label-primary">Active</span></td>
                                    <td>2024-07-10</td>
                                    <td>John, Jane, Bob</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">View</button>
                                        <button class="btn btn-sm btn-secondary">Edit</button>
                                    </td>
                                </tr>
 Repeat for more projects 
</tbody>
    </table>
</div>
<div class="col-12 mb-4">
    <h6 class="card-title">Create/Edit Project</h6>
    <form>
 Project form fields here 
</form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
