        {<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="dropdown card-widgets">
                            <a href="#" class="dropdown-toggle arrow-none" data-toggle="dropdown" aria-expanded="false">
                                <i class="ri-more-fill"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="javascript:void(0);" class="dropdown-item"><i class="mdi mdi-pencil me-1"></i>Edit</a>
                                <a href="javascript:void(0);" class="dropdown-item"><i class="mdi mdi-delete me-1"></i>Delete</a>
                                <a href="javascript:void(0);" class="dropdown-item"><i class="mdi mdi-email-outline me-1"></i>Invite</a>
                                <a href="javascript:void(0);" class="dropdown-item"><i class="mdi mdi-exit-to-app me-1"></i>Leave</a>
                            </div>
                        </div>
                        <h4 class="mt-0" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><a href="@Url.Action("ProjectDetails", "Manager", new {id = project.Id})" class="text-title">@Html.DisplayFor(modelItem => project.ProjectName)</a></h4>
                        @if (project.Status == "Ongoing")
                        {
                            <div class="badge bg-secondary">ongoing</div>
                        }
                        else if (project.Status == "Finished"){
                        <div class="badge bg-primary">Finished</div>
                        }

                        <p class="text-muted font-13 my-3">
                            <span class="description-text" style="overflow: hidden; text-overflow: ellipsis; max-height: 20px; display:inline-block">
