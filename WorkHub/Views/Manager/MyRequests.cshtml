                                    <small class="text-break pe-3">@item.Comment</small>
                                </div>
                            </td>
                            <td>
                                <span class="text-nowrap">@item.RequestDate</span>
                            </td>
                            <td>
                                @*<span class="badge bg-label-warning text-capitalize">Pending</span>*@
                                @if (item.Status == "Approved")
                                {
                                    <span class="badge bg-label-success me-1">@item.Status</span>
                                }
                                else if (item.Status == "Declined")
                                {
                                    <span class="badge bg-label-danger me-1">@item.Status</span>
                                }
                                else if (item.Status == "Pending")
                                {
                                    <span class="badge bg-label-info me-1">@item.Status</span>
                                }
                            </td>
                            <td>
                                <div class="text-xxl-center">
                                    <div class="dropdown">
                                        <a href="javascript:;" class="btn btn-icon dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown">
