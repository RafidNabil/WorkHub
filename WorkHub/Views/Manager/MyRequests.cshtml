                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string taskTitle = ViewBag.TaskNames[item.TaskId].TaskTitle;
                        string taskDescription = ViewBag.TaskNames[item.TaskId].Description;
                        string developerName = ViewBag.TeamMemberNames[item.DeveloperId].Username;
