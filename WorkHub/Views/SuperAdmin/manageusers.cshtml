@model IEnumerable<WorkHub.Models.UserSignUp>

@{
    ViewBag.Title = "User List";
    Layout = "~/Views/SuperAdmin/SuperAdminIndex.cshtml";
}

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    @using (Html.BeginForm("UpdateUserRole", "SuperAdmin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", user.Id)
                        @Html.DropDownList("role", new SelectList(new[] { "developer", "admin", "manager" }, user.Role), new { @class = "form-control" })
                        <button type="submit" class="btn btn-primary btn-sm">Update Role</button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("DeleteUser", "SuperAdmin", FormMethod.Post, new { @onsubmit = "return confirm('Are you sure you want to delete this user?');" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", user.Id)
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
