
@{
    ViewBag.Title = "NewBuild";
    Layout = "~/Views/Developer/DeveloperIndex.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Trigger New Build</h1>

    <form id="buildForm">
        <div class="form-group">
            <label for="branchName">Branch Name</label>
            <input type="text" class="form-control" id="branchName" placeholder="Enter branch name" required>
        </div>

        <div class="form-group">
            <label for="buildOptions">Build Options</label>
            <select class="form-control" id="buildOptions">
                <option>Debug</option>
                <option>Release</option>
            </select>
        </div>

        <div class="form-group">
            <label for="commitMessage">Commit Message</label>
            <input type="text" class="form-control" id="commitMessage" placeholder="Enter commit message">
        </div>

        <button type="submit" class="btn btn-primary">Trigger Build</button>
    </form>

    <div id="buildStatus" class="mt-4">
        <!-- Build status will be displayed here -->
    </div>
</div>
