
@{
    ViewBag.Title = "DeploymentStatus";
    Layout = "~/Views/Developer/DeveloperIndex.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col">
            <h1>Deployment Status Page</h1>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <!-- Deployment status cards -->
            <div class="card deployment">
                <div class="card-body">
                    <h5 class="card-title">Production Environment</h5>
                    <p class="card-text">Status: Live</span></p>
                    <p class="card-text">Deployed: June 15, 2024 10:00 AM</p>
                    <p class="card-text">Version: v1.0.0</p>
                    <a href="#" class="btn btn-sm btn-primary">View Details</a>
                </div>
            </div>

            <div class="card deployment">
                <div class="card-body">
                    <h5 class="card-title">Staging Environment</h5>
                    <p class="card-text">Status: Testing</span></p>
                    <p class="card-text">Deployed: June 16, 2024 11:00 AM</p>
                    <p class="card-text">Version: v1.1.0-beta</p>
                    <a href="#" class="btn btn-sm btn-primary">View Details</a>
                </div>
            </div>

            <div class="card deployment">
                <div class="card-body">
                    <h5 class="card-title">Development Environment</h5>
                    <p class="card-text">Status: Inactive</span></p>
                    <p class="card-text">Deployed: Not deployed yet</p>
                    <p class="card-text">Version: N/A</p>
                    <a href="#" class="btn btn-sm btn-primary">View Details</a>
                </div>
            </div>

            <!-- Add more deployment status cards as needed -->
        </div>
    </div>
</div>
