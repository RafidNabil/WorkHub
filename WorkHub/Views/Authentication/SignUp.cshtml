    <script>
    $(document).ready(function () {
        // Real-time password validation
        $("#password").on("input", function () {
            var password = $(this).val();
            var passwordValidationMessage = [];

            // Check for minimum length
            if (password.length < 8 || password.length > 20) {
                passwordValidationMessage.push("Password must be between 8 and 20 characters.");
            }

            // Check for at least one letter
            if (!/[A-Za-z]/.test(password)) {
                passwordValidationMessage.push("At least one letter.");
            }

            // Check for at least one digit
            if (!/\d/.test(password)) {
                passwordValidationMessage.push("At least one digit.");
            }

            // Check for at least one special character
            if (!/[~!@@$#%&*]/.test(password)) {
                passwordValidationMessage.push("At least one special character.");
            }

            // Display validation message in a single line
            if (passwordValidationMessage.length === 0) {
                $("#password-validation-error").hide(); // Hide validation error message if everything is correct
            } else {
                $("#password-validation-error").text(passwordValidationMessage.join(" ")).show();
            }
        });
    });
    </script>


    <script>
        $(document).ready(function () {
            $('#confirmPassword, #password').on('input', function () {
                var password = $('#password').val();
                var confirmPassword = $('#confirmPassword').val();

                if (password === confirmPassword) {
                    $('#passwordMatchMessage').text('Passwords match').removeClass('text-danger').addClass('text-success');
                } else {
                    $('#passwordMatchMessage').text('Passwords do not match').removeClass('text-success').addClass('text-danger');
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            // Real-time validation for email field
            $("#Email").on("input", function () {
                var email = $(this).val();
                if (email.endsWith("gmail.com") || email.endsWith("yahoo.com")) {
                    // Valid email format
                    $("#email-validation-error").hide(); // Hide validation error message if shown
                } else {
                    // Invalid email format
                    $("#email-validation-error").text("Email must end with 'gmail.com' or 'yahoo.com'").show();
                }
            });
        });
    </script>


</body>
</html>


