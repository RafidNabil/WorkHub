            font-size: 0.7rem; /* Adjust the font size as needed */
        }
    </style>

</head>

<body>
    <!-- Content -->
    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y" style="padding-right: 15.5rem">
            <div class="authentication-inner">
                <div class="card">
                    <div class="card-body">
                        <div class="app-brand justify-content-center">
                            <a href="@Url.Action("SignIn", "Authentication")" class="app-brand-link gap-2">
                                <span class="app-brand-logo demo">
                                    <!-- SVG Logo here -->
                                </span>
                                <span class="app-brand-text demo text-body fw-bolder">WorkHub</span>
                            </a>
                        </div>
                        <h4 class="mb-2">Adventure starts here 🚀</h4>
                        <p class="mb-4">Make your project management easy!</p>

                        @using (Html.BeginForm("SignUp", "Authentication", FormMethod.Post, new { @id = "formAuthentication" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Enter your username", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(m => m.Username)
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email", @id = "Email" })
                                <span id="email-validation-error" class="text-danger field-validation-error"></span>
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>

                            <div class="mb-3 form-password-toggle">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                <div class="input-group input-group-merge">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password", @placeholder = "••••••••••••", @aria_describedby = "password" })
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                                <span id="password-validation-error" class="text-danger field-validation-error"></span>
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>


                            <div class="mb-3 form-password-toggle">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                                <div class="input-group input-group-merge">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "confirmPassword", @placeholder = "Re-enter your password", @aria_describedby = "confirmpassword" })
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>

                            <div id="passwordMatchMessage" class="mb-3 text-danger"></div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms" />
                                    <label class="form-check-label" for="terms-conditions">
                                        I agree to
                                        <a href="javascript:void(0);">privacy policy & terms</a>
                                    </label>
                                </div>
                            </div>
                            <button class="btn btn-primary d-grid w-100">Sign up</button>
                        }

                        <p class="text-center">
                            <span>Already have an account?</span>
                            <a href="@Url.Action("SignIn", "Authentication")">
                                <span>Sign in instead</span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->
    <!-- / Content -->
